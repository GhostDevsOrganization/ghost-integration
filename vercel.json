{
    "version": 2,
    "rootDirectory": ".",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "backend/dist/main.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": "dist/**"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/dist/main.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/index.html"
        }
    ],
    "outputDirectory": "frontend/build"
}